{% extends 'EventosBundle::mibaseusuario.html.twig' %}
{% block title %}
	Crear Usuario
{% endblock %}
{% block barra_progreso_inscripcion %}
{% include 'EventosBundle::barras.html.twig'  %}
{% endblock %}
{% block accion %}
  {{ path('usuario_crear') }}
{% endblock %}
{% block datos_asistente %}
  <div class="form-horizontal">
  		<div class="form-group">
  			{{ form_label(form.nombre, label|default(null), { 'label_attr': { 'class': 'col-xs-3 control-label' }}) }}
  			<div class="col-xs-9">{{ form_errors(form.nombre) }}{{ form_widget(form.nombre, { 'attr': {'class': 'form-control'}}) }}</div>
  		</div>
  		<div class="form-group">
  			{{ form_label(form.apellidos, label|default(null), { 'label_attr': { 'class': 'col-xs-3 control-label' }}) }}
  			<div class="col-xs-9">{{ form_errors(form.apellidos) }}{{ form_widget(form.apellidos, { 'attr': {'class': 'form-control'}}) }}</div>
  		</div>
  		<div class="form-group">
  			{{ form_label(form.sexo, label|default(null), { 'label_attr': { 'class': 'col-xs-3 control-label', 'separator': '=====' }}) }}
  			<div class="col-xs-9">{{ form_errors(form.sexo) }}{{ form_widget(form.sexo, { 'attr': {'class': 'form-control'}}) }}</div>
  		</div>
		<div class="form-group">
  			{{ form_label(form.mail, label|default(null), { 'label_attr': { 'class': 'col-xs-3 control-label' }}) }}
  			<div class="col-xs-9">{{ form_errors(form.mail) }}{{ form_widget(form.mail, { 'attr': {'class': 'form-control'}}) }}</div>
  		</div>
  		<div class="form-group">
  			{{ form_label(form.telefono, label|default(null), { 'label_attr': { 'class': 'col-xs-3 control-label' }}) }}
  			<div class="col-xs-9">{{ form_errors(form.telefono) }}{{ form_widget(form.telefono, { 'attr': {'class': 'form-control'}}) }}</div>
  		</div>
		<div class="form-group">
  			{{ form_label(form.dui, label|default(null), { 'label_attr': { 'class': 'col-xs-3 control-label' }}) }}
  			<div class="col-xs-9">{{ form_errors(form.dui) }}{{ form_widget(form.dui, { 'attr': {'class': 'form-control'}}) }}</div>
  		</div>
		<div class="form-group">
  			{{ form_label(form.comunidad, label|default(null), { 'label_attr': { 'class': 'col-xs-3 control-label' }}) }}
  			<div class="col-xs-9">{{ form_errors(form.comunidad) }}{{ form_widget(form.comunidad, { 'attr': {'class': 'form-control'}}) }}</div>
  		</div>
  		<div class="form-group">
  			{{ form_label(form.direccion, label|default(null), { 'label_attr': { 'class': 'col-xs-3 control-label' }}) }}
  			<div class="col-xs-9">{{ form_errors(form.direccion) }}{{ form_widget(form.direccion, { 'attr': {'class': 'form-control'}}) }}</div>
  		</div>
  	</div>
	<br>
	<br>

{% endblock %}
